<h4>Listado de establecimientos</h4>

<ul class="nav nav-pills">
    <li><%= link_to 'Nuevo establecimiento', new_establecimiento_path %></li>
</ul>

<table class="table table-striped">
  <tr>
    <th>Número</th>
    <th>CUE</th>
    <th>Nombre</th>
    <th>Zona</th>
    <th>Ub. Cargos</th>
    <th>Ub. Horas</th>
    <th>Localidad</th>
    <th>&nbsp;</th>
  </tr>

<% @establecimientos.each do |establecimiento| %>
  <tr>
    <td><%= establecimiento.numero %></td>
    <td><%= establecimiento.cue %></td>
    <td><%= establecimiento.nombre %></td>
    <td><%= establecimiento.zona %></td>
    <td><%= establecimiento.ubicacion_cargos %></td>
    <td><%= establecimiento.ubicacion_horas %></td>
    <td><%= Localidad.find(establecimiento.localidad_id).nombre %></td>
    <td>
        <div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">&nbsp;<span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to 'Ver', establecimiento %></li>
    <li><%= link_to 'Editar', edit_establecimiento_path(establecimiento) %></li>
    <li><%= link_to 'Eliminar', establecimiento, method: :delete, data: { confirm: 'Está seguro de querer eliminar este Establecimiento?' } %></li>
  </ul>
        </div>
    </td>    
  </tr>
<% end %>
</table>