<h4>Listado de agentes</h4>

<ul class="nav nav-pills">
    <li><%= link_to 'Nuevo agente', new_agente_path %></li>
</ul>

<table class="table table-striped">
  <tr>
    <th>DNI</th>
    <th>CUIT/CUIL</th>
    <th>Apellido</th>
    <th>Nombre</th>
    <th>Localidad</th>
    <th>Fecha de ingreso</th>
    <th>&nbsp;</th>
  </tr>

<% @agentes.each do |agente| %>
  <tr>
    <td><%= agente.dni %></td>
    <td><%= agente.cuit_cuil %></td>
    <td><%= agente.apellido %></td>
    <td><%= agente.nombre %></td>
    <td><%= Localidad.find(agente.localidad_id).nombre %></td>
    <td><%= agente.fecha_ingreso %></td>
    <td>
        <div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">&nbsp;<span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to 'Ver', agente %></li>
    <li><%= link_to 'Editar', edit_agente_path(agente) %></li>
    <li><%= link_to 'Eliminar', agente, method: :delete, data: { confirm: 'EstÃ¡ seguro de querer eliminar este Agente?' } %></li>
  </ul>
        </div>
    </td>    
  </tr>
<% end %>
</table>